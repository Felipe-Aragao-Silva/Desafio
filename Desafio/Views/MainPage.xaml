<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Desafio.MainPage"
             Title="Conversor de Moedas">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Grid ColumnDefinitions="*, *, Auto" RowDefinitions="Auto">
            <Picker x:Name="FromPicker" Grid.Column="0" Title="De:" >
                <Picker.Items>
                    <x:String>BRL</x:String>
                    <x:String>USD</x:String>
                    <x:String>EUR</x:String>
                </Picker.Items>   
            </Picker>

            <Picker x:Name="ToPicker" Grid.Column="1" Title="Para:">
                <Picker.Items>
                    <x:String>BRL</x:String>
                    <x:String>USD</x:String>
                    <x:String>EUR</x:String>
                </Picker.Items>
            </Picker>

            <Button Grid.Column="2" x:Name="Inverter" Margin="10,0,0,0"/>

        </Grid>
            
        <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto">
            <Label Text="Valor" VerticalOptions="Center" Margin="0, 0, 20, 0"/>
            <Entry x:Name="AmountEntry" Grid.Column="1" Placeholder="Ex: 100,50" Keyboard="Numeric"/>
        </Grid>

        <Button Text="Converter" Grid.Column="3"/>

        <Label x:Name="ResultLabel" FontSize="18" FontAttributes="Bold"/>

        <Label x:Name="InfoLabel" FontSize="12" TextColor="Gray"/>

    </VerticalStackLayout>

</ContentPage>
